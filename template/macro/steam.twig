{% macro app_url(app_id) %}
https://store.steampowered.com/app/{{ app_id }}/?curator_clanid=32686107
{% endmacro %}

{% macro developer_url(developer) %}
https://store.steampowered.com/search/?sort_by=Reviews_DESC&category1=998&developer={{ developer|e('url') }}
{% endmacro %}

{% macro publisher_url(publisher) %}
https://store.steampowered.com/search/?sort_by=Reviews_DESC&category1=998&publisher={{ publisher|e('url') }}
{% endmacro %}

{% macro video_attr(game_id, videos) %}
{# TODO: Remove import since Twig 2.11. #}
{% import _self as steam %}
{% if videos -%}
    data-video="{{ videos|split(',')|first }}"
    href="{{ steam.app_url(game_id) }}"
{%- endif %}
{% endmacro %}
