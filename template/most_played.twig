{% extends 'layout/ranking.twig' %}

{% block title %}Most Played Steam Games{% endblock %}
{% block heading %}Most Played{% endblock %}

{% block content %}
    <p>
        Top 250 most played Steam games, based on average number of concurrent players in the last seven days.
    </p>
{% endblock %}

{% block scoring_heading %}Concurrent Players{% endblock %}
{% block scoring_criteria %}
    <span class="players">{{ game.average_players_7d|number_format }}</span>
    <span class="rating">rated {{ (game.positive_reviews / game.total_reviews * 100)|round }}%</span>
{% endblock %}
